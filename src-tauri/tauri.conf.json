{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ticketsystem-desktop",
  "version": "0.6.9",
  "identifier": "dev.jackolix.ticketbase-desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Ticketbase",
        "width": 1400,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:default",
            "core:webview:allow-create-webview-window",
            "core:window:allow-set-focus",
            "core:window:allow-close",
            "fs:allow-write-file",
            "fs:allow-read-file",
            "fs:allow-create",
            "fs:allow-exists",
            "fs:allow-remove",
            "fs:scope-temp",
            {
              "identifier": "opener:allow-open-path",
              "allow": [
                {
                  "path": "$TEMP/*"
                }
              ]
            },
            {
              "identifier": "opener:allow-open-url",
              "allow": [
                {
                  "url": "file://*"
                }
              ]
            },
            {
              "identifier": "opener:allow-reveal-item-in-dir",
              "allow": [
                {
                  "path": "$TEMP/*"
                }
              ]
            }
          ],
          "platforms": [
            "linux",
            "macOS",
            "windows"
          ]
        }
      ]
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Jackolix/ticketbase-desktop/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE5OTcxNTZGREI2MEQ5NTcKUldSWDJXRGJieFdYR1ljRUdDV1hNWmhVbjJvVjFFUEZ2WEpqZnNkQmh0enJyYnVIbm04cmlBUEMK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "macOS": {
      "signingIdentity": "-"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}